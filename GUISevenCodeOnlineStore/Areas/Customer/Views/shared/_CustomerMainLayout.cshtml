<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Dashboard 3</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/dist/css/CustomerCss/CustomerStyling.css">
    @* //<link href="~/dist/css/custom.css" rel="stylesheet" />*@
</head>

<body class="bodystyleArabic hold-transition sidebar-mini">

    <div style="display: grid;" class="wrapper">
        <nav style="background-color: green;" class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav navspacestyleCustomer">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("Index", "Home", new { Area = "Customer" })" class="nav-link">Home</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Contact</a>
                </li>
                <li></li>
            </ul>


            @*//========= mm ========*@

            <ul class="navbar-nav barstyle social_notificationbar">
                <li class="nav-item mt-1 ml-2 mr-2">
                    <div id="myclick">
                        <a class="astyleinbutton" onclick="getelement(1)">
                            Arabic
                        </a>
                    </div>
                </li>
                <li class="nav-item  mt-1">
                    @*@using (Html.BeginForm("LogoutMethoud", "Login", FormMethod.Post, new { @id = "logOutForm", @class = "form-elements" }))
                    {
                        <button type="submit" class="astyleinbuttonLogOut">Sign out</button>
                    }*@

                    @using (Html.BeginForm(new { area = "Identity", controller = "Login", action = "LogoutMethoud" }))
                    {
                        @*<a href="@Url.Action("Index", "Home", new { Area = "Admin" })" class="brand-link">*@
                        <button type="submit" class="btn btn-default btn-flat">Sign out</button>
                    }

                </li>

                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <aside style="background-color: green;" class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="@Url.Action("Index", "Home", new { Area = "Customer" })" class="brand-link">
                <img src="~/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">7Code Apps</span>
            </a>
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">Alexander Pierce</a>
                    </div>
                </div>
                <div class="form-inline">
                    <div class="input-group" data-widget="sidebar-search">
                        <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-sidebar">
                                <i class="fas fa-search fa-fw"></i>
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </aside>

        <div>
            <div class="content-wrapper">
                <div class="content-header">
                    <div class="container-fluid">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>

        <footer class="main-footer">
            <strong class="copyrightArabic">Copyright &copy; 2023  <a href="https://adminlte.io">7Code Apps</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 3.2.0
            </div>
        </footer>
    </div>

    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/dist/js/adminlte.js"></script>
    <script src="~/plugins/chart.js/Chart.min.js"></script>
    <script src="~/dist/js/demo.js"></script>
    <script src="~/dist/js/pages/dashboard3.js"></script>

    <script type="text/javascript">
        function getelement(id) {
            console.log("Id => " + id)
            localStorage.setItem("IdWhenChangeArabic", id);
            console.log("Local Storage => " + localStorage.getItem("IdWhenChangeArabic"));
            location.reload();
        }
        //===================== on load ================
        $(document).ready(function () {
            var x = localStorage.getItem("IdWhenChangeArabic");
            if (x == 1) {
                document.head.innerHTML += '<link rel="stylesheet" href="/dist/css/CompositeStyle.css">';
                console.log("in finishing if ", localStorage.getItem("IdWhenChangeArabic"));
                document.getElementById('myclick').innerHTML =
                    "<a  onclick='getelement(2)' class='astyleinbutton'>English</a>";
            }
            else {
                document.head.innerHTML += '<link rel="stylesheet" href="/dist/css/adminlte.css">';
                document.getElementById('myclick').innerHTML =
                    "<a  onclick='getelement(1)' class='astyleinbutton'>Arabic</a>";
            }
        });
                //====================   =======================

    </script>

</body>
</html>
