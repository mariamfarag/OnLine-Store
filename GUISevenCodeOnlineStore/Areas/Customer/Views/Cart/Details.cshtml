@model DALSevenCodeOnlineStore.Products
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<link href="~/dist/css/CustomerCss/CheckoutCss.css" rel="stylesheet" />

<div class="container stylequery containdetails" style=" height: 780px;">
    <div class="row" style="margin-top:100px;">
        <div class="col-lg-6 col-sm-12 imagestylecolsmall">
            <img style="" src="~/Zimage/Products/@Model.Image" class="img-fluid imagestyle" alt="empty cart" />
        </div>
        <div style="background-color:white;padding:19px;" class="col-lg-6 col-sm-12">
            <h3 class="mt-3">
             Name :  @Model.Name
            </h3>
            <h3 id="price" class="mt-3">
                @Model.Price
            </h3>
            <h3 class="mt-3">
                Type : 
            </h3>
            <h3>
                Quantity : 
            </h3>
            <div class="mt-3">
                <input class="increase" onclick="increaseitem()" type="button" value="<" />
                <input id="quantity" type="number" min="1" class="inputfield" />
                <input class="decrease" onclick="decrement()" type="button" value=">" />
               @* <p id="total"></p>*@
            </div>
           
            <div class="row mt-3">
                <div class="col-6">
                @*    <a asp-area="Customer" asp-controller="Cart" asp-action="addtoCart" asp-route-id="Id" class="ml-1 btn pull-right btn-outline-info">
                        <i class="fas fa-shopping-cart"></i>
                    </a>*@
                    <a asp-area="Customer" asp-controller="Cart" asp-action="addtoCart" asp-route-id="@Model.Id" class="btn btnindetails">
                        ADD TO CART
                    </a>
                </div>
                <div class="col-6">
                    <a href="@Url.Action("Index", "Checkout", new { Area = "Customer" })" class="btn btnindetails">
                        BUY NOW
                    </a>
                </div>
            </div>

            <h3 class="mt-4">Description : </h3>
            @Model.Description
        </div>
        
    </div>

</div>
<script>
    var data = 1;
    document.getElementById("quantity").value = data;
    function increaseitem(){
        var pri=document.getElementById("price").innerHTML;
        //var totalpri = document.getElementById("total");
        //totalpri=pri*data;
        console.log("price => "+pri)
            data = data + 1;
        document.getElementById("quantity").value = data;
        }
    function decrement() {
        if(data>1){
            data = data - 1;
            document.getElementById("quantity").value = data;
        }
       
    }
</script>